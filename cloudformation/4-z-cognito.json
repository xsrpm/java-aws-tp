{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Configuracion Pool de usuarios",
  "Metadata": {},
  "Parameters": {
    "emailUserAdmin": {
      "Type": "String",
      "Description": "email del usuario admin por defecto"
    }
  },
  "Mappings": {},
  "Conditions": {},
  "Resources": {
    "userPoolDummy": {
      "Type": "AWS::Cognito::UserPool",
      "Properties": {
        "AdminCreateUserConfig": {
          "AllowAdminCreateUserOnly": true,
          "InviteMessageTemplate": {
            "EmailMessage": "Se ha creado su usuario {username} y su contraseña temporal es {####}",
            "EmailSubject": "Alta Cuenta AWS"
          },
          "UnusedAccountValidityDays": 7
        },
        "AutoVerifiedAttributes": [
          "email"
        ],
        "EmailVerificationMessage": "Su código de verificación es {####}.",
        "EmailVerificationSubject": "Su código de verificación",
        "Policies": {
          "PasswordPolicy": {
            "MinimumLength": 6,
            "RequireLowercase": false,
            "RequireNumbers": false,
            "RequireSymbols": false,
            "RequireUppercase": false
          }
        },
        "UserPoolName": "userPoolDummy"
      }
    },
    "clientAngular": {
      "Type": "AWS::Cognito::UserPoolClient",
      "Properties": {
        "ClientName": "angular",
        "ExplicitAuthFlows": [
          "ADMIN_NO_SRP_AUTH"
        ],
        "GenerateSecret": false,
        "ReadAttributes": [
          "email"
        ],
        "RefreshTokenValidity": 2,
        "UserPoolId": {
          "Ref": "userPoolDummy"
        },
        "WriteAttributes": [
          "email"
        ]
      }
    },
    "userAdmin": {
      "Type": "AWS::Cognito::UserPoolUser",
      "Properties": {
        "DesiredDeliveryMediums": [
          "EMAIL"
        ],
        "Username": "admin",
        "UserAttributes": [
          {
            "Name": "email",
            "Value": {
              "Ref": "emailUserAdmin"
            }
          }
        ],
        "UserPoolId": {
          "Ref": "userPoolDummy"
        }
      }
    },
    "adminGroup": {
      "Type": "AWS::Cognito::UserPoolGroup",
      "Properties": {
        "Description": "Grupo de usuarios administrador",
        "GroupName": "ADMIN",
        "Precedence": 5,
        "UserPoolId": {
          "Ref": "userPoolDummy"
        }
      }
    },
    "adminUserToAdminGroup": {
      "Type": "AWS::Cognito::UserPoolUserToGroupAttachment",
      "DependsOn": [
        "userAdmin",
        "adminGroup"
      ],
      "Properties": {
        "GroupName": "ADMIN",
        "Username": "admin",
        "UserPoolId": {
          "Ref": "userPoolDummy"
        }
      }
    }
  },
  "Outputs": {
    "cognitoIdUserPool": {
      "Description": "ID del grupo Cognito",
      "Value": {
        "Ref": "userPoolDummy"
      },
      "Export": {
        "Name": "cognito-pool-id"
      }
    },
    "clientIdAngular": {
      "Description": "ID del cliente oauth angular",
      "Value": {
        "Ref": "clientAngular"
      },
      "Export": {
        "Name": "cognito-client-angular"
      }
    }
  }
}